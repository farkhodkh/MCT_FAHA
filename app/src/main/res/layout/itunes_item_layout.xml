<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>

        <import type="android.view.View"/>

        <variable
                name="repository"
                type="com.example.mct_faha.repositories.Repository"/>
    </data>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="8dp">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="150dp"
                    android:layout_height="125dp"
                    android:id="@+id/trackView"
                    android:layout_weight="1"
                    android:layout_margin="6dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <TextView
                    android:text="kind"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/wrapperType"
                    android:layout_weight="0"
                    android:padding="6dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="@+id/trackView"
                    app:layout_constraintStart_toEndOf="@+id/trackView"
                    android:layout_marginStart="24dp"/>
            <TextView
                    android:text="Artist name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/artistName"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:layout_margin="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/wrapperType"
                    app:layout_constraintStart_toEndOf="@+id/trackView"
                    android:layout_marginStart="24dp"/>
            <TextView
                    android:text="Track name"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:id="@+id/trackName"
                    android:layout_weight="1"
                    android:padding="6dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/artistName" app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.673"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>